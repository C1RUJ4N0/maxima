{
    "family": "maxima-app-task-def",
    "networkMode": "awsvpc",
    "cpu": "256",
    "memory": "512",
    
    // --- ROL DE EJECUCIÓN (CORRECTO) ---
    "executionRoleArn": "arn:aws:iam::830099649054:role/ecsTaskExecutionRole",
    
    // --- ROL DE TAREA (CORREGIDO) ---
    // Usamos el mismo rol de ejecución como rol de tarea.
    "taskRoleArn": "arn:aws:iam::830099649054:role/ecsTaskExecutionRole",
    
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "containerDefinitions": [
        {
            "name": "maxima-app-container",
            "image": "830099649054.dkr.ecr.us-east-1.amazonaws.com/maxima-app:latest",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/maxima-app",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}
