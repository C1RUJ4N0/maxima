{
    "family": "maxima-app-task-def",
    "networkMode": "awsvpc",
    "cpu": "512",
    "memory": "1024",
    "executionRoleArn": "arn:aws:iam::830099649054:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::830099649054:role/ecsTaskExecutionRole",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "containerDefinitions": [
        {
            "name": "maxima-nginx-container",
            "image": "830099649054.dkr.ecr.us-east-1.amazonaws.com/maxima-nginx:latest",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/maxima-nginx",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        },
        {
            "name": "maxima-app-container",
            "image": "830099649054.dkr.ecr.us-east-1.amazonaws.com/maxima-app:latest",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 9000,
                    "hostPort": 9000,
                    "protocol": "tcp"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/maxima-app",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            
            "environment": [
                {
                    "name": "APP_NAME",
                    "value": "Maxima"
                },
                {
                    "name": "APP_ENV",
                    "value": "production"
                },
                {
                    "name": "APP_DEBUG",
                    "value": "false"
                },
                {
                    "name": "APP_KEY",
                    "value": "base64:q00JDlFDpkfKkPenTy+27w1uUwgYg/SjRa5TxIRn+ig="
                },
                {
                    "name": "APP_URL",
                    "value": "http://localhost"
                },
                {
                    "name": "LOG_CHANNEL",
                    "value": "stack"
                },
                
                
                {
                    "name": "DB_CONNECTION",
                    "value": "mysql"
                },
                {
                    "name": "DB_HOST",
                    "value": "maxima-db.c0lsyi000mcg.us-east-1.rds.amazonaws.com"
                },
                {
                    "name": "DB_PORT",
                    "value": "3306"
                },
                {
                    "name": "DB_DATABASE",
                    "value": "laravel_pos"
                },
                {
                    "name": "DB_USERNAME",
                    "value": "laraveluser"
                },
                {
                    "name": "DB_PASSWORD",
                    "value": "password"
                }
            ]
        }
    ]
}